	<!-- -->
	<!-- WS SIRH-ABS-WS -->
	<!-- -->
	<Environment name="SIRH_ABS_WS_URL" type="java.lang.String"
		description="SIRH ABS WS endpoint url" value="http://svi-tomcat0:8085/sirh-abs-ws/"
		override="false" />

	<!-- -->
	<!-- WS SIRH-WS -->
	<!-- -->
	<Environment name="SIRH_WS_URL" type="java.lang.String"
		description="SIRH WS endpoint url" value="http://svi-tomcat0:8085/sirhws/"
		override="false" />

	<!-- -->
	<!-- WS SIRH-PTG-WS -->
	<!-- -->
	<Environment name="SIRH_PTG_WS_URL" type="java.lang.String"
		description="SIRH ABS WS endpoint url" value="http://svi-tomcat0:8085/sirh-ptg-ws/"
		override="false" />

	<!-- -->
	<!-- WS SIRH-EAE-WS -->
	<!-- -->
	<Environment name="SIRH_EAE_WS_URL" type="java.lang.String"
		description="SIRH EAE WS endpoint url" value="http://localhost:8080/sirh-eae-ws/"
		override="false" />

	<!-- -->
	<!-- WS RADI -->
	<!-- -->
	<Environment name="RADI_WS_URL" type="java.lang.String"
		description="SIRH ABS WS endpoint url" value="http://svi-tomcat0:8085/radi/"
		override="false" />
	
	<!-- -->
	<!-- WS ADS -->
	<!-- -->
	<Environment name="ADS_WS_URL" type="java.lang.String"
		description="ADS WS endpoint url" value="http://svi-tomcat0:8077/"
		override="false" />
		
	<!--  -->
	<!-- ALFRESCO -->
	<!--  -->
	<!-- ATTENTION : bien mettre le "/" apres le port -->
	<Environment name="ALFRESCO_URL" type="java.lang.String" description="Alfresco endpoint url" 
		value="http://svi-alfresco.site-mairie.noumea.nc:8080/" override="false" />

	<!-- Paramètre pour différencier QUAL et PROD -->
	<Environment name="TYPE_ENV" type="java.lang.String"
		description="Type d'environnement (RECETTE ou PROD)" value="RECETTE"
		override="false" />

	<!-- -->
	<!-- Paramètres LDAP -->
	<!-- -->
	<Parameter description="Critère de recherche LDAP" name="CRITERE_RECHERCHE_LDAP"
		override="false" value="samaccountname" />
	<Parameter description="Admin LDAP" name="HOST_LDAP_ADMIN"
		override="false" value="cn=adminwas,ou=WAS,ou=APPLI,ou=Z-users" />
	<Parameter description="Init CTX LDAP" name="INITCTX_LDAP"
		override="false" value="com.sun.jndi.ldap.LdapCtxFactory" />
	<Parameter description="Mot de passe de l'hôte LDAP" name="HOST_LDAP_PASSWORD"
		override="false" value="***REMOVED***" />
	<Parameter description="Base LDAP" name="BASE_LDAP" override="false"
		value="dc=site-mairie,dc=noumea,dc=nc" />
	<Parameter description="Hôte LDAP" name="HOST_LDAP" override="false"
		value="ldap://hurle:389/" />
	<Parameter description="Hôte LDAP 2" name="HOST_LDAP2"
		override="false" value="ldap://gberge:389/" />
	<Parameter description="Hôte LDAP 3" name="HOST_LDAP3"
		override="false" value="ldap://netone:389/" />		
		

	<!-- Pour l'affichage du module titre repas -->
	<Environment name="AFFICHE_MODULE_TITRE_REPAS" type="java.lang.Boolean"
	description="Affichage du menu des titres repas" value="true" override="false" />

